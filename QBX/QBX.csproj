	<ItemGroup>
		<EditorConfigFiles Remove="C:\code\QBX\.editorconfig" />
	</ItemGroup>

	<ItemGroup>
		<None Remove="Fonts\8x14.bin" />
		<None Remove="Fonts\8x16.bin" />
		<None Remove="Fonts\8x8.bin" />
		<None Remove="Hardware\DefaultPalette.bin" />
	</ItemGroup>

	<ItemGroup>
		<EmbeddedResource Include="Fonts\8x14.bin" />
		<EmbeddedResource Include="Fonts\8x16.bin" />
